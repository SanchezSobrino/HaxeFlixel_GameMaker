<?xml version="1.0" encoding="utf-8" ?>
<data>
  <definition id="grey" src="ui/chrome/dark_grey"/>


    <tile_test id="map" x="0" y="0" tiles_w="50" width="1080" height="600" tiles_h="31">
      <anchor x="left_panel.right" y="left_panel.top" x-flush="left" y-flush="top"/>
      <min_size width="stretch:left_panel.right,right_panel.left" height ="2000"/>
    </tile_test>


  <group id="left_background"/>
    <chrome id="left_panel" x="0" y="0" width="100" height="screen.height" use_def="grey" group="left_background">
      <anchor x="left" y="top" x-flush="left" y-flush="top"/>
      <min_size width="100" height="100%"/>
    </chrome>


  <group id="left"/>
    <button id="prueba" x="left_panel.left+5" y="5" width="left_panel.width-10" group="left_elements" label="prueba1">
      <min_size width="left_panel.width-10"/>
    </button>


  <group id="right_background"/>
    <chrome id="right_panel" x="0" y="0" width="100" height="screen.height" use_def="grey" group="right_background">
      <anchor x="right" y="top" x-flush="right" y-flush="top"/>
      <min_size width="100" height="100%"/>
    </chrome>


</data>
